# frozen_string_literal: true

source 'https://rubygems.org'

ruby '3.0.3'

# Routing Tree Web Toolkit.
gem 'roda'

# Sass processor
gem 'sassc'

# Interface to template engines
gem 'tilt'

# Use Puma as the app server.
gem 'puma', '~> 5.6'

# A make-like build utility for Ruby.
gem 'rake'

# Sequel: The Database Toolkit for Ruby.
gem 'sequel', '>= 5.41'

# Mysql driver.
gem 'mysql2'

# A runtime developer console and IRB alternative with powerful introspection capabilities.
gem 'pry'

# A fast JSON parser and Object marshaller as a Ruby gem.
gem 'oj'

# Validation library with type-safe schemas and rules.
gem 'dry-validation'

# A powerful logger for Roda with a few tricks up it's sleeve.
gem 'roda-enhanced_logger'

# Organize your code into reusable components.
gem 'dry-system'

# A toolkit of support libraries and Ruby core extensions extracted from the Rails framework.
gem 'activesupport'

# Ruby internationalization and localization (i18n) solution.
gem 'i18n'

# Rack middleware for blocking & throttling.
gem 'rack-attack'

# Redis is an in-memory database that persists on disk.
gem 'redis'

# Efficient and thread-safe code loader for Ruby.
gem 'zeitwerk'

# Assets minification
gem 'yuicompressor'

group :development, :test do
  # A Ruby gem to load environment variables from `.env`.
  gem 'dotenv'

  # A Ruby static code analyzer and formatter, based on the community Ruby style guide.
  gem 'rubocop'

  # An extension of RuboCop focused on code performance checks.
  gem 'rubocop-performance'

  # Thread-safety analysis for your projects.
  gem 'rubocop-thread_safety'

  # Code style checking for Sequel.
  gem 'rubocop-sequel'

  # A RuboCop plugin for Rake
  gem 'rubocop-rake'
end
